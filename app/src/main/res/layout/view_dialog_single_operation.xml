<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:clickable="true"
        android:layout_width="291dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/shape_dialog_confirm_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_single_operation_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="#000000"-->
            <!--android:paddingBottom="10dp" />-->

            <TextView
                android:id="@+id/tv_single_operation_dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="19dp"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#e5e5e5" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:background="@drawable/shape_dialog_single_operation_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_single_operation_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_confirm_bottom"
                android:clickable="true"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_single_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_confirm_bottom1"
                android:clickable="true"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

