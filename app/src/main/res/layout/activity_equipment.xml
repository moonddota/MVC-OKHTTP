<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_1" />

    <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
        android:id="@+id/device_refresh"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/device_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="2.5"
            android:background="@color/darkblue"
            android:id="@+id/chnnel_but"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="19.6sp"
            android:gravity="center"
            android:text="@string/EquipmentActivity_tv6" />

        <Button
            android:layout_weight="1"
            android:textSize="19.6sp"
            android:clickable="false"
            android:background="@color/bbc2bb"
            android:textColor="@color/white"
            android:id="@+id/connect_but"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/EquipmentActivity_tv5"/>
    </LinearLayout>

</LinearLayout>