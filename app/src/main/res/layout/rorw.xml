<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/rorw_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_dq"
                android:layout_width="108dp"
                android:layout_height="42.5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/SetChannelActivity_tv1"
                android:textColor="@color/text_gray3"
                android:textSize="16sp" />

            <View
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="2px"
                android:layout_height="42.5dp"
                android:background="@color/text_gray3"/>

            <TextView
                android:id="@+id/number_zj"
                android:layout_width="108dp"
                android:layout_height="42.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/editsharp8"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/SetChannelActivity_tv2"
                android:textColor="@color/text_gray3"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/setting_rc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>