<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingTop="16dp"
    android:gravity="center|left"
    android:layout_gravity="top"
    android:orientation="horizontal"
    android:id="@+id/ll_top"
    android:background="@drawable/shape_gradient">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="horizontal">

          <LinearLayout
              android:clickable="true"
              android:id="@+id/ll_top_show"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">
              <ImageView
                  android:id="@+id/top_show"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="14dp"
                  android:layout_marginRight="10dp"
                  android:background="@mipmap/icon_actionbar"
                  android:clickable="false" />
          </LinearLayout>

          <com.skylin.uav.drawforterrain.views.MarqueeTextView
              android:singleLine="true"
              android:ellipsize="marquee"
              android:focusable="true"
              android:marqueeRepeatLimit="marquee_forever"
              android:focusableInTouchMode="true"
              android:scrollHorizontally="true"
              android:id="@+id/top_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center|left"
              android:text="@string/topbar_tv1"
              android:textColor="@color/white"
              android:textSize="15.25sp" />
      </LinearLayout>

      <LinearLayout
          android:visibility="invisible"
          android:id="@+id/top_icon"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:orientation="horizontal">

          <LinearLayout
              android:id="@+id/top_channle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.1"
              android:clickable="true"
              android:gravity="center|left"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/top_channle_im"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:background="@mipmap/icon_path" />

              <TextView
                  android:id="@+id/top_channle_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="5dp"
                  android:text=" "
                  android:textColor="@color/white"
                  android:textSize="12sp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/top_rtk_im"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:background="@mipmap/icon_rtk" />

              <ImageView
                  android:layout_marginLeft="5dp"
                  android:id="@+id/top_rtk_im_icon"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:background="@mipmap/icon_rtk_null" />
          </LinearLayout>

          <LinearLayout
              android:visibility="invisible"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/top_elec_im"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="center"
                  android:background="@mipmap/icon_elec" />

              <TextView
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="3dp"
                  android:id="@+id/top_elec_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center"
                  android:layout_marginBottom="5dp"
                  android:gravity="center"
                  android:text="70%"
                  android:textColor="@color/white"
                  android:textSize="12sp" />
          </LinearLayout>

      </LinearLayout>
  </LinearLayout>